{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ConfigFile.schema.json",
  "title": "Game Server Config File Schema",
  "description": "Schema for a single configuration file entry in a game server schema.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The filename.",
      "default": "config.cfg"
    },
    "path": {
      "type": "string",
      "description": "Absolute path to the file from container.",
      "default": "/path/to/config.cfg"
    },
    "configure_values": {
      "type": "boolean",
      "description": "Auto Configure Server Settings?",
      "default": false
    },
    "procedural": {
      "type": "boolean",
      "description": "Is this file generated by the server/game?",
      "default": false
    },
    "fields": {
      "type": "array",
      "description": "Editable fields for this config file.",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "description": "Display name for the field." },
          "key": { "type": "string", "description": "Key used in the config file." },
          "type": { "type": "string", "enum": ["string", "number", "boolean", "array"], "description": "Data type of the field." },
          "default": {},
          "description": { "type": "string", "description": "Description of the field." },
          "min": { "type": "number", "description": "Minimum value (for numbers)." },
          "max": { "type": "number", "description": "Maximum value (for numbers)." },
          "enum": { "type": "array", "description": "Allowed values for this field (if type is enum or select).", "items": {} }
        },
        "required": ["key", "type"],
        "additionalProperties": false
      },
      "default": []
    }
  },
  "required": ["name", "path", "configure_values", "procedural", "fields"],
  "additionalProperties": false
}