{
  "game": "DayZ",
  "version": "1.0",
  "category": "survival",
  "steam_id": 221100,
  "docker_image": "modix-steamcmd-game-server:latest",
  "required_ports": [
    {
      "name": "Game Port",
      "key": "port",
      "protocol": "udp",
      "default": 2302,
      "description": "Main game port for DayZ server"
    },
    {
      "name": "Query Port",
      "key": "query_port",
      "protocol": "udp",
      "default": 27016,
      "description": "Steam query port"
    },
    {
      "name": "RCON Port",
      "key": "rcon_port",
      "protocol": "tcp",
      "default": 27017,
      "description": "RCON remote control port"
    }
  ],
  "config_files": {
    "is_folder": false,
    "include_subfolders": false,
    "files": [
      {
        "name": "serverDZ.cfg",
        "path": "/home/steam/dayzserver/serverDZ.cfg",
        "configure_values": true,
        "procedural": false,
        "fields": [
          {
            "name": "Hostname",
            "key": "hostname",
            "type": "string",
            "default": "My DayZ Server",
            "description": "Server name displayed in the browser"
          },
          {
            "name": "Password",
            "key": "password",
            "type": "string",
            "optional": true,
            "description": "Optional server join password"
          },
          {
            "name": "Admin Password",
            "key": "adminPassword",
            "type": "string",
            "optional": true,
            "description": "Password for admin commands"
          },
          {
            "name": "Max Players",
            "key": "maxPlayers",
            "type": "number",
            "default": 60,
            "min": 1,
            "max": 127
          },
          {
            "name": "Server Time",
            "key": "serverTime",
            "type": "string",
            "default": "2011/8/10/7/0",
            "description": "Initial server time (YYYY/M/D/H/M)"
          },
          {
            "name": "Persistence Enabled",
            "key": "enablePersistence",
            "type": "boolean",
            "default": true
          },
          {
            "name": "Whitelist",
            "key": "whitelist",
            "type": "boolean",
            "default": false
          },
          {
            "name": "VON Enabled",
            "key": "disableVoN",
            "type": "boolean",
            "default": false,
            "description": "Disable voice chat if true"
          },
          {
            "name": "Time Acceleration",
            "key": "timeAcceleration",
            "type": "number",
            "default": 6,
            "min": 1,
            "max": 12
          },
          {
            "name": "Server Files ID",
            "key": "server_file_id",
            "type": "string",
            "default": "serverDZ",
            "description": "Base name for config files"
          }
        ]
      },
      {
        "name": "cfgeconomycore.xml",
        "path": "/home/steam/dayzserver/mpmissions/dayzOffline.chernarusplus/db/cfgeconomycore.xml",
        "configure_values": false,
        "procedural": true,
        "fields": []
      },
      {
        "name": "cfgeventspawns.xml",
        "path": "/home/steam/dayzserver/mpmissions/dayzOffline.chernarusplus/db/cfgeventspawns.xml",
        "configure_values": false,
        "procedural": true,
        "fields": []
      }
    ]
  },
  "log_files": {
    "is_folder": true,
    "include_subfolders": true,
    "path": "/home/steam/dayzserver/logs"
  }
}
