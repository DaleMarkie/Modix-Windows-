{
  "game": "Minecraft (itzg/docker-minecraft-server)",
  "version": "1.0",
  "category": "sandbox",
  "steam_id": "minecraft",
  "docker_image": "itzg/docker-minecraft-server:latest",
  "required_ports": [
    {
      "name": "Game Port",
      "key": "port",
      "protocol": "tcp",
      "default": 25565,
      "description": "Main Minecraft server port"
    },
    {
      "name": "RCON Port",
      "key": "rcon_port",
      "protocol": "tcp",
      "default": 25575,
      "description": "RCON remote control port"
    }
  ],
  "config_files": {
    "is_folder": false,
    "include_subfolders": false,
    "files": [
      {
        "name": "server.properties",
        "path": "/data/server.properties",
        "configure_values": true,
        "procedural": false,
        "fields": [
          {
            "name": "Server Name",
            "key": "motd",
            "type": "string",
            "default": "A Minecraft Server",
            "description": "Message of the day displayed in server list"
          },
          {
            "name": "Max Players",
            "key": "max-players",
            "type": "number",
            "default": 20,
            "min": 1,
            "max": 100
          },
          {
            "name": "Online Mode",
            "key": "online-mode",
            "type": "boolean",
            "default": true,
            "description": "Whether to use Mojang authentication"
          },
          {
            "name": "Difficulty",
            "key": "difficulty",
            "type": "select",
            "options": ["peaceful", "easy", "normal", "hard"],
            "default": "easy"
          },
          {
            "name": "Game Mode",
            "key": "gamemode",
            "type": "select",
            "options": ["survival", "creative", "adventure", "spectator"],
            "default": "survival"
          },
          {
            "name": "Level Name",
            "key": "level-name",
            "type": "string",
            "default": "world"
          },
          {
            "name": "Allow Nether",
            "key": "allow-nether",
            "type": "boolean",
            "default": true
          },
          {
            "name": "Enable Command Blocks",
            "key": "enable-command-block",
            "type": "boolean",
            "default": false
          },
          {
            "name": "View Distance",
            "key": "view-distance",
            "type": "number",
            "default": 10,
            "min": 2,
            "max": 32
          },
          {
            "name": "White List Enabled",
            "key": "white-list",
            "type": "boolean",
            "default": false
          },
          {
            "name": "Server Port",
            "key": "port",
            "type": "number",
            "default": 25565,
            "min": 1024,
            "max": 65535
          },
          {
            "name": "RCON Enabled",
            "key": "enable-rcon",
            "type": "boolean",
            "default": false
          },
          {
            "name": "RCON Port",
            "key": "rcon_port",
            "type": "number",
            "default": 25575,
            "min": 1024,
            "max": 65535
          },
          {
            "name": "RCON Password",
            "key": "rcon_password",
            "type": "string",
            "optional": true
          },
          {
            "name": "Server File ID",
            "key": "server_file_id",
            "type": "string",
            "default": "server.properties",
            "description": "Name of the config file used (e.g., server.properties)"
          }
        ]
      },
      {
        "name": "ops.json",
        "path": "/data/ops.json",
        "configure_values": false,
        "procedural": true,
        "fields": []
      },
      {
        "name": "whitelist.json",
        "path": "/data/whitelist.json",
        "configure_values": false,
        "procedural": true,
        "fields": []
      }
    ]
  },
  "log_files": {
    "is_folder": true,
    "include_subfolders": true,
    "path": "/data/logs"
  }
}
