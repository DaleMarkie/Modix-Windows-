{
  "game": "Project Zomboid",
  "version": "1.0",
  "category": "survival",
  "required_ports": [
    {
      "name": "Server Port",
      "key": "port",
      "protocol": "udp",
      "default": 16261,
      "description": "Port used for the server"
    },
    {
      "name": "RCON Port",
      "key": "rcon_port",
      "protocol": "tcp",
      "default": 27015,
      "description": "Port used for RCON remote control"
    }
  ],
  "fields": [
    {
      "name": "Server Name",
      "key": "server_name",
      "type": "string",
      "default": "My PZ Server",
      "description": "Name of the server displayed to players"
    },
    {
      "name": "Server Port",
      "key": "port",
      "type": "number",
      "default": 16261,
      "min": 1024,
      "max": 65535,
      "description": "Port used for the server"
    },
    {
      "name": "Max Players",
      "key": "maxplayers",
      "type": "number",
      "default": 16,
      "min": 1,
      "max": 64
    },
    {
      "name": "Password",
      "key": "password",
      "type": "string",
      "optional": true,
      "description": "Optional server join password"
    },
    {
      "name": "Public",
      "key": "public",
      "type": "boolean",
      "default": false,
      "description": "Advertise server on public list"
    },
    {
      "name": "Workshop Items",
      "key": "workshopItems",
      "type": "list",
      "default": [],
      "description": "Steam Workshop mod IDs"
    },
    {
      "name": "Mods",
      "key": "mods",
      "type": "list",
      "default": [],
      "description": "Internal mod names as defined in mod.info"
    },
    {
      "name": "Map",
      "key": "map",
      "default": "Muldraugh, KY",
      "description": "Base map to load"
    },
    {
      "name": "PVP Enabled",
      "key": "pvp",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Pause Empty Server",
      "key": "pauseEmpty",
      "type": "boolean",
      "default": true,
      "description": "Pause game when no players are connected"
    },
    {
      "name": "Log Local Chat",
      "key": "logLocalChat",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Voice Enabled",
      "key": "voice",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Sandbox Preset",
      "key": "preset",
      "type": "select",
      "options": ["Apocalypse", "Builder", "Survivor", "Custom"],
      "default": "Survivor",
      "description": "Starting sandbox preset"
    },
    {
      "name": "Custom Sandbox Config",
      "key": "sandbox_config",
      "type": "textarea",
      "optional": true,
      "description": "Raw text for custom SandboxVars.lua content"
    },
    {
      "name": "Custom Spawn Points",
      "key": "spawn_regions",
      "type": "textarea",
      "optional": true,
      "description": "JSON or Lua data for custom spawn regions"
    },
    {
      "name": "RCON Enabled",
      "key": "rcon_enabled",
      "type": "boolean",
      "default": true
    },
    {
      "name": "RCON Port",
      "key": "rcon_port",
      "type": "number",
      "default": 27015,
      "min": 1024,
      "max": 65535
    },
    {
      "name": "RCON Password",
      "key": "rcon_password",
      "type": "string",
      "optional": true
    },
    {
      "name": "Save World Interval (Minutes)",
      "key": "save_interval",
      "type": "number",
      "default": 15,
      "min": 1,
      "max": 60
    },
    {
      "name": "Server File ID",
      "key": "server_file_id",
      "type": "string",
      "default": "servertest",
      "description": "Name of the config file used (e.g., servertest.ini)"
    }
  ]
}
