{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Module Manifest",
  "type": "object",
  "required": ["name", "version", "description", "author", "website", "permissions", "frontend", "backend"],
  "properties": {
    "name": { "type": "string" },
    "version": { "type": "string" },
    "description": { "type": "string" },
    "author": { "type": "string" },
    "website": { "type": "string", "format": "uri" },
    "enabled": { "type": "boolean" },
    "permissions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "frontend": {
      "type": "object",
      "required": ["routes", "nav_items"],
      "properties": {
        "routes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["path", "component", "permission"],
            "properties": {
              "path": { "type": "string" },
              "component": { "type": "string" },
              "permission": { "type": "string" }
            }
          }
        },
        "nav_items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["label", "path", "icon", "permission"],
            "properties": {
              "label": { "type": "string" },
              "path": { "type": "string" },
              "icon": { "type": "string" },
              "permission": { "type": "string" }
            }
          }
        }
      }
    },
    "backend": {
      "type": "object",
      "required": ["router"],
      "properties": {
        "router": { "type": "string" }
      }
    }
  }
}
