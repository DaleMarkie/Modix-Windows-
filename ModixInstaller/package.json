{
  "name": "modix-panel",
  "version": "1.1.3",
  "private": true,
  "scripts": {
    "dev-frontend": "npx next dev -p 3000",
    "dev-backend": "node scripts/dev-backend.js",
    "dev": "concurrently \"npm run dev-frontend\" \"npm run dev-backend\"",

    "build": "cross-env NEXT_PUBLIC_SKIP_ESLINT=true npx next build",
    "start-frontend": "npx next start -p 3000",
    "start-backend": "modix-backend.exe",
    "start": "concurrently \"npm run start-frontend\" \"npm run start-backend\"",

    "build-backend": "pyinstaller --onefile backend/api_main.py --name modix-backend",
    "build-launcher": "pyinstaller --onefile launcher.py --name modix",

    "package-win": "npm run build && npm run build-backend && npm run build-launcher && powershell Compress-Archive -Path .next,node_modules,package.json,modix.exe,modix-backend.exe -DestinationPath modix-panel-win.zip -Force"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "axios": "^1.12.2",
    "express": "5.1.0",
    "lucide-react": "^0.544.0",
    "next": "14.2.33",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.10.1"
  },
  "devDependencies": {
    "@types/node": "24.5.2",
    "@types/react": "19.1.15",
    "autoprefixer": "^10.4.15",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.4",
    "typescript": "5.9.2"
  }
}

